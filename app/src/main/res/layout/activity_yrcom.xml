<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yrcom">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/wallbg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <RelativeLayout
            android:id="@+id/relativeLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/textViewYourComic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Your Comic"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonAddNewComic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="#6a1b9a"
                android:text="Add New Comic"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutComic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutHeader"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewCover1"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:src="@drawable/green" />

            <TextView
                android:id="@+id/textViewComic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewCover1"
                android:layout_centerHorizontal="true"
                android:text="Naruto Vol. 56"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </RelativeLayout>





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>